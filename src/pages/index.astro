---
export const prerender = false;
import BaseLayout from "@/layouts/base.astro";
import Headlines from "./_home/headlines.astro";
import ScopedNews from "./_home/scopedNews.astro";
import type { Meta } from "@/lib/types";
import { SCOPE_LINKS, SITE } from "@/lib/config";
import CustomAds from "src/components/widgets/CustomAds.astro";

const countByScope = [6,3,3];

const meta:Meta ={
  title : `Diario ${SITE.title} - Prensa escrita del Alto Mayo para San Mart√≠n`,
  metaTitle : "Diario " + SITE.title,
  description : SITE.description,
  type : "website",
  ogImage : "/og-favicon.webp",
  ogImageAlt : `Diario ${SITE.title}`,
};
---

<BaseLayout meta={meta}>
  <CustomAds/>
  <Headlines />  
  {
    SCOPE_LINKS.map((item, index)=>(
    <ScopedNews title={item.text} scope={item.href.replace("/","")} count={countByScope[index]} /> 
    ))
  }
</BaseLayout> 
