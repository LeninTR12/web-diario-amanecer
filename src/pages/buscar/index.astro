---
import WideCard from "@/components/cards/wideCard.astro";
import LisLayout from "@/layouts/list.astro";
import { categoriesHandler } from "@/lib/handlers/categories";
import { searchHandler } from "@/lib/handlers/search";
import type { Meta } from "@/lib/types";
import "@pagefind/default-ui/css/ui.css";

const url = new URL(Astro.request.url);
const query = url.searchParams.get("q");
const type = url.searchParams.get("t");

const searchArticles = query ? await searchHandler.searchArticles(query) : [];

if (type) {
  return new Response(JSON.stringify(searchArticles), {
    status: 200,
    headers: {
      "Content-Type": "application/json",
    },
  });
}

const title = `Resultados para: ${query}`;

const meta: Meta = {
  title: "",
  metaTitle: "",
  description: "",
  type: "website",
  ogImage: "",
  ogImageAlt: "",
};
---

<LisLayout meta={meta} headerTitle={title} type="search" >
  <div class="flex justify-start lg:w-[1024px] max-w-[1024px] ">
    {searchArticles.length !== 0 
      ? (
      <ul class="flex flex-col max-w-[733px] gap-5 flex-1 ">
        {
          searchArticles.map((article) => {
            const category = categoriesHandler.oneCategory(article.categories[0]);

            return (
              <WideCard
              category={category}
              article={article}
              isLast={searchArticles.lastIndexOf(article) === searchArticles.length - 1}
              />
            )
          })
        }
      </ul>
      
      <div class="flex " ></div>
      )
      :(
        <span>Sin resultados</span>
      )
      }
      </div>
</LisLayout>



