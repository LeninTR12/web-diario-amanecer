---
import PrintEdition from "@/components/widgets/printEdition.astro";
import ArrowLeft from "@/assets/svgs/arrow-left.astro";
import RecentNews from "@/pages/_home/recentNews.astro";
---

<div>
  <div class="flex flex-col items-center justify-center gap-8 py-16">
    <section
      class="prose w-full max-w-5xl md:prose-lg py-8 container prose-img:border prose-img:mx-auto prose-img:border-base-200 prose-img:rounded-lg prose-p:break-words prose-a:break-all prose-pre:break-words prose-pre:cursor-text prose-code:break-words prose-code:whitespace-pre-wrap items-center lg:items-start flex flex-col lg:flex-row lg:gap-8 lg:px-0"
      data-pagefind-body
    >
      <slot />
      <div
        class="flex flex-col w-full lg:w-[358px] justify-center items-center"
      >
        <PrintEdition />
        <RecentNews page="singlePost" />
      </div>
    </section>
    <div
      class="flex justify-center items-center gap-2.5 bg-[#0E4F8F] text-white w-[234px] h-11 rounded-full"
    >
      <ArrowLeft size="20" />
      <button
        onclick="if (document.referrer) { history.back(); } else { window.location.href = '/' }"
        class="font-semibold cursor-pointer"
      >
        Ir a la p√°gina anterior
      </button>
    </div>
  </div>
</div>


}