---

import Facebook from "@/assets/svgs/facebook.astro";
import Instagram from "@/assets/svgs/instagram.astro";
import Tiktok from "@/assets/svgs/tiktok.astro";
import Youtube from "@/assets/svgs/youtube.astro";

export interface Props {
  icon: string | undefined;
}

const { icon } = Astro.props;

if (!icon) {
  throw new Error("Icon prop is required");
}
---

{icon === "facebook" && <Facebook />}
{icon === "instagram" && <Instagram />}
{icon === "tiktok" && <Tiktok />}
{icon === "youtube" && <Youtube />}
