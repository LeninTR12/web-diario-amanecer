  <div class="flex gap-2.5 text-[#1A346B] w-full">
    <span class="font-sans font-semibold text-base !m-0 flex gap-2 items-center">  <span class="block w-[2px] h-[16px] bg-[#1A346B]"></span>EDICIÃ“N IMPRESA</span>
  </div>
  <img
    src={printEditionPage?._embedded["wp:featuredmedia"]?.[0]["source_url"] || imageNotFound.src}
    alt={API_PAGES.printEdition.title}
    width={716} 
    height={1080}
    class="w-full min-w-full h-auto border border-[#e3e3e4] p-1 rounded-md"
  />
</aside>

