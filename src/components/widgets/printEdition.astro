---
import { API_PAGES } from "@/lib/config";
import { pagesHandler } from "@/lib/handlers/pages";
import imageNotFound from "src/assets/images/404.webp";
import Image from "astro/components/Image.astro";
import Divider from "@/components/bases/divider.astro";

const printEditionPage = await pagesHandler.onePageBySlug(
  API_PAGES.printEdition.slug
);
---

<aside class="w-full flex flex-col">
  <div class="flex gap-2.5 text-[#1A346B] w-full">
    <Divider />
    <span class="font-sans text-base !m-0">EDICIÃ“N IMPRESA</span>
  </div>
  <Image
    src={printEditionPage?._embedded["wp:featuredmedia"]?.[0]["source_url"] || imageNotFound}
    alt={API_PAGES.printEdition.title}
    width={358} 
    height={540}
    class="w-full h-auto"
  />
</aside>

