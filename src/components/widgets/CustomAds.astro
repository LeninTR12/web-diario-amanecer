---
import { API_PAGES } from "@/lib/config";
import { pagesHandler } from "@/lib/handlers/pages";
import Image from "astro/components/Image.astro";

const customAds = await pagesHandler.onePageBySlug(API_PAGES.customAds.slug);
---

<div class="w-full flex justify-center my-12">
  {
    customAds ? (
      <div
        class="slider-custom-ads object-cover w-full max-w-[1024px] bg-[#e2ca7b] flex justify-center items-center overflow-hidden mt-2"
        set:html={customAds.content.rendered}
      ></div>
    ) : (
      <Image
        src="/custom-ads.webp"
        alt={API_PAGES.customAds.title}
        width={1024}
        height={350}
        class=""
        layout="responsive"
      />
    )
  }
</div>
<style is:global>
    .slider-custom-ads{
        flex-direction: row;
        justify-content: start;
                

    }
  .slider-custom-ads>figure.size-large,
  .slider-custom-ads>figure.size-large>img {
    max-width: 1024px !important;
    
  }
</style>
