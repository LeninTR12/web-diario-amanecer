---
import ShareItem from "@/components/bases/share-item.astro";
import ScriptShare from "@/components/bases/script.astro";
type Props = {
  text: string;
};
const { pathname } = Astro.url;
const { text } = Astro.props;
---

<>
  <div class="flex gap-4">
    <ShareItem
      className="hover:bg-[#1A346B] hover:text-primary-content"
      title="Copiar link"
      dataAwSocialShare="clipboard"
      dataAwUrl={`${import.meta.env.SITE + pathname}`}
      dataAwText={text}
      icon="clipboard"
      />
      
    <ShareItem
      className="hover:bg-[#008000]  hover:text-primary-content"
      title="Compartir en WhatsApp"
      dataAwSocialShare="whatsapp"
      dataAwUrl={`${import.meta.env.SITE + pathname}`}
      dataAwText={text}
      icon="whatsapp"
    />
    <ShareItem
      className="hover:bg-[#3b5998]  hover:text-primary-content"
      title="Compartir en Facebook"
      dataAwSocialShare="facebook"
      dataAwUrl={`${import.meta.env.SITE + pathname}`}
      dataAwText={text}
      icon="facebook"
    />
  </div>
  <ScriptShare />
</>
