---
import Search01 from "@/assets/svgs/search-01.astro";
import { SOCIAL_LINKS } from "@/lib/config";
import ThemeController from "../bases/theme-controller.astro";
import Icon from "../bases/icon.astro";
---

<div
  class="flex w-full h-[40px] bg-[#1A346B] items-center justify-center transition-all duration-300 ease-in-out overflow-hidden hover:min-h-[40px]"
  id="top-bar"
>
  <div
    class="flex w-full max-w-5xl px-4 h-8 lg:px-0 justify-between items-center"
  >
    <form
      action="/buscar"
      method="GET"
      aria-label="Search"
      class="flex w-[200px] h-6 bg-white text-[#1A346B] items-center justify-between rounded-full px-3 font-sans"
    >
      <input
        type="text"
        name="q"
        placeholder="Buscar"
        class="bg-transparent text-sm outline-none w-full placeholder-[#1A346B]"
      />
      <button type="submit" class="ml-2">
        <Search01 />
      </button>
    </form>

    <div class="navbar-end gap-1">
      <div class="hidden">
        <ThemeController />
      </div>

      <div class="flex flex-row gap-3">
        {
          SOCIAL_LINKS.map(({ href, icon, text, target }) => (
            <a
              href={href}
              class="text-white"
              target={target ?? "_blank"}
              title={text}
              aria-label={text}
            >
              <Icon icon={icon} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
<script is:inline>
  
  document.addEventListener('astro:after-swap', topBarHandler);
  document.addEventListener("DOMContentLoaded", topBarHandler);
  
  function topBarHandler(){
    const topBar = document.getElementById("top-bar");
    const heightTopBar = getComputedStyle(topBar).height;
    const header = document.querySelector("header");

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;

      hiddenTopBar(scrollY);
      
    });

    let timeout = null;
    header.addEventListener('mouseenter', ()=>{
      timeout = setTimeout(()=>{
        topBar.style.height = heightTopBar;
      },200);
      
    })

    header.addEventListener('mouseleave', ()=>{
      clearTimeout(timeout);

      const scrollY = window.scrollY;
      hiddenTopBar(scrollY);
    });
    

    function hiddenTopBar(scrollY){
      if (scrollY > parseInt(heightTopBar)) {
        topBar.style.height = "0px";
        header.style.boxShadow = "0px 2px 6px #8f8f8fc2";
      } else {
        topBar.style.height = heightTopBar;
        header.style.boxShadow = "none";
      }
    }

  };
</script>
