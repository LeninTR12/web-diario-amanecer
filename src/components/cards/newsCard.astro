---
import { Image } from "astro:assets";
import Divider from "../bases/divider.astro";
import imageNotFound from "@/assets/images/404.webp";
import { categoriesHandler } from "@/lib/handlers/categories";
import type { Article } from "@/lib/types";
import { formatDateTime } from "@/lib/utils/date";

type Props = {
  article: Article;
  index: number;
};

const { article, index } = Astro.props;

const category = categoriesHandler.oneCategory(article.categories[0]);
---

<article
  class="col-span-1 group max-w-sm mx-auto flex flex-col gap-2 h-full relative isolate"
>
  <div class="aspect-video overflow-hidden rounded-md">
    <Image
    src={article._embedded["wp:featuredmedia"]?.[0]["source_url"] || imageNotFound}
    alt={article.title.rendered}
    width={165}
      height={125}
      loading={index < 3 ? "eager" : "lazy"}
      layout="responsive"
      class="w-full h-full object-cover"
    />
  </div>
  <div class="flex flex-col flex-1">
    <h3
      class="text-xl font-serif font-semibold lg:group-hover:underline line-clamp-2"
    >
      <a href={`/${category.slug}/${article.slug}`} set:html={article.title.rendered}>
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        
      </a>
    </h3>
    <p class="text-sm text-base-content/80 line-clamp-3 text-pretty lg:mb-auto" set:html={article.excerpt.rendered}></p>
    <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="text-xs text-primary dark:text-secondary"
        >{category.name}</span
      >
      <Divider />
      <span class="text-xs text-base-content/80"
        >{formatDateTime(article.date)}</span
      >
    </div>
  </div>
</article>
