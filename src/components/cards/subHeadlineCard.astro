---
import { Image } from "astro:assets";
import Divider from "@/components/bases/divider.astro";
import imageNotFound from "src/assets/images/404.webp";
import { formatDateTime, getDateDistance } from "@/lib/utils/date";
import { categoriesHandler } from "@/lib/handlers/categories";
import type { Category, Article } from "@/lib/types";
import { decode } from "html-entities";
import { SITE } from "@/lib/config";
import { undefined } from "astro:schema";

type Props = {
  article: Article;
  isFirst?: boolean;
  isLast?: boolean;
  type?: "singlePost" | "category";
};

const { article, isLast, isFirst, type } = Astro.props;
const category: Category = categoriesHandler.oneCategory(article.categories[0]);
---

<article class="flex gap-4">
  <div class="overflow-hidden w-[149px] h-[84px] shrink-0">
    <Image
      src={article._embedded["wp:featuredmedia"]?.[0]["source_url"] ||
        imageNotFound}
      alt={decode(String(article.title.rendered))}
      loading="eager"
      class="object-cover rounded w-full h-full"
      width={149}
      height={84}
    />
  </div>

  <div class="flex flex-col flex-1">
    <div class="flex items-center gap-2 mb-1">
      <div class="flex-1">
        <h3 class="text-base lg:group-hover:underline leading-5 font-serif font-semibold line-clamp-3">
          <a
            href={`/${category.slug}/${article.slug}`}
            title={decode(String(article.title.rendered))}
          >
            {decode(String(article.title.rendered))}
          </a>
        </h3>
      </div>
    </div>
    {
      !type === null || type === "category" ? null : (
        <div class="flex text-xs items-center gap-2">
          <span class="flex md:hidden lg:flex px-1.5 py-0.5 rounded-md font-semibold uppercase text-[#10477C] bg-[#FBC208]">
            {category.name}
          </span>
          <span class="flex gap-1 text-[#10477C]">
            <span>{formatDateTime(article.date)}</span>
          </span>
        </div>
      )
    }
  </div>
</article>
